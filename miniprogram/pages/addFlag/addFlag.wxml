  <view class="flag-type">
    <view class="name-title">
      <view class="icon"></view>
      <text>Flag类型</text>
    </view>
    <view class="types">
      <view class="type {{viewId == 0 ? 'selected' : ''}}" bindtap="selectType" data-type="study" data-index="0">
        <image src="../../images/study.png"></image>
        <text>学习</text>
      </view>
      <view class="type {{viewId == 1 ? 'selected' : ''}}" bindtap="selectType" data-type="sports" data-index="1">
        <image src="../../images/sports.png"></image>
        <text>运动</text>
      </view>
      <view class="type {{viewId == 2 ? 'selected' : ''}}" bindtap="selectType" data-type="health" data-index="2">
        <image src="../../images/health.png"></image>
        <text>健康</text>
      </view>
      <view class="type {{viewId == 3 ? 'selected' : ''}}" bindtap="selectType" data-type="meat" data-index="3">
        <image src="../../images/meat.png"></image>
        <text>饮食</text>
      </view>
      <view class="type {{viewId == 4 ? 'selected' : ''}}" bindtap="selectType" data-type="sleeping" data-index="4">
        <image src="../../images/sleeping.png"></image>
        <text>睡眠</text>
      </view>
    </view>
  </view>

  <view class="flag-deadline">
    <view class="name-title">
      <view class="icon"></view>
      <text>设置deadline</text>
    </view>
    <text class="subtitle">默认每日打卡一次哦~</text>
    <view class="pick-date">
      <picker mode="date" value="{{nowDateString}}" bindchange="bindDateChange">
        <view class="picker">
          {{date}}
        </view>
        <text>点击设置deadline</text>
      </picker>
    </view>
  </view>

