/* pages/addFlag/addFlag.wxss */
.title {
  padding-left: 10px;
  font-weight: 500;
  color: #797979;
  font-size: 1.5em;
  margin-left: 15px;
}

.form {
  width: calc(100% - 20px);
  box-sizing: border-box;
  margin: 20px 10px 0 10px;
}

.form .flag-name{
  
}

.name-title {
  display: flex;
  align-items: center;
}

.name-title .icon {
  width: 5px;
  height: 1em;
  margin-left: 15px;
  background: #cfb5e2;
}

.name-title text {
  padding-left: 5px;
  font-size: 1.2em;
  color: #797979;
}

.subtitle {
  margin-top: 15px;
  padding-left: 15px;
  font-size: 0.9em;
  color: #797979;
}

.flag-name input {
  height: 3em;
  border-radius: 5px;
  margin-top: 15px;
  margin-left: 15px;
  margin-right: 15px;
  padding: 0 10px;
  box-shadow: 0px 0px 10px #ccc;
}

.placeholder-class {
  font-size: 0.9em;
}

.flag-deadline, .flag-type, .flag-punishment, flag-permise {
  margin-top: 20px;
}

.pick-date {
  height: 3em;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 15px;
  margin-left: 15px;
  margin-right: 15px;
  box-shadow: 0px 0px 10px #ccc;
  color: #797979;
}

.pick-date text {
  font-size: 0.7em;
}

.types {
  display: flex;
  justify-content: space-around;
  margin: 15px 10px;
}

.type {
  border-radius: 5px;
  box-shadow: 0px 0px 10px #ccc;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 0.8em;
  color: #797979;
  padding-bottom: 10px;
}

.type image {
  width: 2em;
  height: 2em;
  margin: 10px;
}

.flag-punishment textarea {
  box-shadow: 0px 0px 10px #ccc;
  padding: 5px 10px;
  height: 50px;
  margin: 15px;
  width: calc(100% - 50px);
  border-radius: 5px;
}

.form .btn {
  background: #cfb5e2;
  width: calc(100% - 30px);
  height: 3em;
  margin: 25px auto;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border-radius: 5px;
  box-shadow: 0px 0px 10px #ccc;
}

.flag-permise radio-group {
  margin: 15px;
  font-size: 1em;
  color: #797979;
  display: flex;
  justify-content: space-around;
}

.selected {
  background: #cfb5e27d;
}